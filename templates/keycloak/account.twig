{% import '_macros.twig' as macros %}
{% extends "_layout_keycloak" %}

{% if not currentUser %}
   {% redirect "/keycloak" %}
{% endif %}

{% block content %}

	<div class="container">

        <h1>Account</h1>
       <p>
       Vorname: {{ currentUser.firstName ? currentUser.firstName : 'n/a' }}<br>
       Nachname: {{ currentUser.lastName ? currentUser.lastName : 'n/a' }}<br>
       Email: {{ currentUser.email }}<br>
       Benutzername: {{ currentUser.username }}<br>
       ID: {{ currentUser.id }}<br>
       <a href="/logout">(Abmelden)</a>
       </p>
  </div>

{% endblock %}